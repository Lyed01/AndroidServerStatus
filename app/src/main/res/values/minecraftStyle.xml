<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Estilo principal de la aplicaci칩n -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/minecraft_font</item>
        <item name="shapeAppearanceLargeComponent">@style/SquareShapeAppearance.LargeComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/SquareShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceSmallComponent">@style/SquareShapeAppearance.SmallComponent</item>
    </style>

    <!-- Estilos para componentes m치s cuadrados -->
    <style name="SquareShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="SquareShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="SquareShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
    <style name="CustomDialogTheme.TransparentBackground" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
    </style>

    <style name="MinecraftButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/minecraft_button_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="MinecraftImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button</item> <!-- Fondo del bot칩n -->
        <item name="android:layout_width">118dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item> <!-- Escalado de la imagen -->
        <item name="android:padding">8dp</item> <!-- Espacio interior del bot칩n -->
    </style>





</resources>
